//---------------------------------------------------------------------------

#ifndef QuizControlH
#define QuizControlH
//---------------------------------------------------------------------------

#include "CommandExecuter.h"

//---------------------------------------------------------------------------

void PrepareRandomValues(int min, int max);
bool GetRandomValue();

class TItem
{
public:
TItem();
string FileName;
double SizeX;
double SizeY;
double PosX;
double PosY;
double Opacity;
double Scale;
bool Reload;
};

//---------------------------------------------------------------------------

class TQuiz
{
public:
TQuiz();
int NumItems;
TItem* Items;
int* Sequence;
int Model;
double Rate;
unsigned long InitialTime;
double Acc;
double TransitionTime;
string Path;
};

//---------------------------------------------------------------------------

class TQuizControl : public TCommandExecuter
{
private:


public:
__fastcall TQuizControl(bool CreateSuspended,TCommandQueue* Commands,TQuiz *Quiz);
void PostCommandHandler(TCommand * Command);
__fastcall ~TQuizControl();
void HandleIdle();
};

